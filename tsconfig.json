{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}